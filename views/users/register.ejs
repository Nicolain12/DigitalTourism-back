<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <main> 
                <div class="main-error-div">
                    <h4 id='main-error-register' class="error-set"></h4>
                </div>
                <form class="form-register" id="form-register"  enctype="multipart/form-data">
                        <p class="error-msg">
                        </p>
                            <h4>Formulario Registro</h4>


                                <div class="main-register-from-top-1">
                                    <label for="userImg-register">Ingrese una foto:</label>
                                    <input type="file" id="userImg-register"name="userImg">
                                        <p class="error-msg">
                                        </p>
                                </div>


                                <div class="register-top">
                                    <div class="input-div">
                                        <label class="first-label" for="name-register">Ingrese su Nombre:</label>
                                        <h5 id='name-set-register' class="error-set"></h5>
                                        <input class="controls-register" type="text" name="name"
                                            value="" id="name-register" />
                                    </div>
                                    <div class="input-div">
                                        <label for="surname-register">Ingrese su Apellido:</label>
                                        <h5 id='surname-set-register' class="error-set"></h5>
                                        <input class="controls-register" type="text" name="surname"
                                            value="" id="surname-register" />
                                            <p class="error-msg">
                                            </p>
                                    </div>


                                </div>

                                <div class="register-middle">
                                    <div class="input-div">
                                        <label for="email-register">Ingrese su Email:</label>
                                        <div class="set-password-div">
                                            <h5 id='email-set-register' class="error-set"></h5>
                                            <h5 id='email-set-alert-register' class="error-set"></h5>
                                        </div>
                                        <input class="controls-register" type="email" name="email"
                                            value="" id="email-register" />
                                            <p class="error-msg">
                                            </p>
                                    </div>
                                    <div class="age-type">
                                        <div class="input-div">
                                            <label for="age-register">Fecha de nacimiento:</label>
                                            <h5 id='age-set-register' class="error-set"></h5>
                                            <input class="controls-register" type="date" name="age" value=""
                                                id="age-register" />
                                                <p class="error-msg">
                                                </p>
                                        </div>
                                        <div class="input-div">
                                            <label for="admin-register">Tipo de usuario:</label>
                                            <h5 id='admin-set-register' class="error-set"></h5>
                                            <select name="isAdmin" id="admin">
                                                <option value="false">Cliente</option>
                                                <option value="true">Administrador</option>
                                            </select>
                                                <p class="error-msg">
                                                </p>
                                        </div>
                                    </div>
                                </div>


                                <div class="register-end">
                                    <div class="input-div">
                                        <label for="password-register">Ingrese su Contraseña:</label>
                                        <div class="set-password-div">
                                            <h5 class="password-set-register error-set"></h5>
                                            <h5 class="password-num-register error-set"></h5>
                                            <h5 class="password-cap-register error-set"></h5>
                                            <h5 class="password-let-register error-set"></h5>
                                        </div>
                                        <input class="controls-register" type="password" name="password" id="password-register" />
                                    </div>

                                    <div class="input-div">
                                        <label for="passwordConfirm">Confirme su Contraseña:</label>
                                        <h5 id='passConfirm-set-register' class="error-set"></h5>
                                        <input class="controls-register" type="password" name="passwordConfirm-register"
                                            id="passwordConfirm-register" />
                                            <p class="error-msg">
                                            </p>
                                    </div>

                                </div>
                                <!-- <p class="from-register-p">Estoy de acuerdo con <a href="#">Terminos y Condiciones</a></p> -->
                               <div class="boton-register">
                                <button class="botons-register">
                                    Registrar
                                </button>
                               </div>
                                <p class="from-register-p">
                                    <a href="/users/loggin">¿Ya tengo Cuenta?</a>
                                </p>
                </form>
            </main>

            <%- include('../partials/footer') %>
    </body>

</html>
