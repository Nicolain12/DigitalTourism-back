<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>

    <body>

        <%- include('../../partials/header') %>

            <main>
                <form action="" method="POST" enctype="multipart/form-data" class="te-flight">

                    <div class="from-createFlight-top">
                        <div class="from-createFlight-top-1">
                            <input type="file" id="input-file-edit" name="productFile" required>
                            <label for="input-file-edit"><i id="circle" class="d fa-image"></i></label>
                        </div>
                        <div class="from-createFlight-top-2">
                            
                            <div class="from-createFlight-top-2-div">
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="airline">Aerolinea:</label>
                                    <input class="from-createFlight-input" type="text" id="airline" name="airline"
                                        placeholder="Aerolinea">
                                </div>
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="description">Descripcion:</label>
                                    <input class="from-createFlight-input" type="text" id="description" name="description"
                                        placeholder="Descripcion">
                                </div>
                            </div>

                            <div class="from-createFlight-top-2-div">
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="departure"><i
                                            class="d fa-plane-departure"></i></label>
                                    <input class="from-createFlight-input" type="text" id="departure" name="departure"
                                        placeholder="Origen">
                                </div>
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="reach"><i
                                            class="d fa-plane-departure"></i></label>
                                    <input class="from-createFlight-input" type="text" id="reach" name="reach"
                                        placeholder="Destino">
                                </div>
                            </div>

                            <div class="from-createFlight-top-2-div">
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="departureDate">Fecha de ida</label>
                                    <input class="from-createFlight-input" type="date" id="departureDate" name="departureDate">
                                </div>
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="reachDate">Fecha de vuelta</label>
                                    <input class="from-createFlight-input" type="date" id="reachDate" name="reachDate">
                                </div>
                            </div>

                            <div class="from-createFlight-top-2-div">

                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="departureHour">Hora de salida</label>
                                    <input class="from-createFlight-input" type="time" id="departureHour" name="departureHour">
                                </div>
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for="reachHour">Hora de llegada</label>
                                    <input class="from-createFlight-input" type="time" id="reachHour" name="reachHour">
                                </div>

                            </div>

                            <div class="from-createFlight-top-2-div">

                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for=".......">......</label>
                                    <input class="from-createFlight-input" type="text" id="......." name="......."
                                        placeholder=".......">
                                </div>
                                <div class="from-createFlight-inputDiv">
                                    <label class="from-createFlight-label" for=".......">........</label>
                                    <input class="from-createFlight-input" type="text" id="......." name="......."
                                        placeholder=".......">
                                </div>

                            </div>



                        </div>
                    </div>
                    <div class="from-createFlight-bottom">
                        <button class="mary" type="submit">Crear</button>
                    </div>

                </form>
            </main>

            <%- include('../../partials/footer') %>

    </body>

</html>