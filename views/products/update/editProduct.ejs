<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %> 

    <main>
        <form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="main-form-edit">
             
             <div class="main-form-top">
                 <div class="main-from-top-1">
                     <input type="file" id="input-file-edit" name="productFile">
                     <label for="input-file-edit" ><i id="circle" class="fa-solid fa-image"></i></label>
                 </div>
                 <div class="main-from-top-2">
                     <div class="main-form-div1">
                         <div class="main-form-div1-origen">
                             <label class="main-form-div1-label" for="departure"><i class="fa-solid fa-plane-departure"></i></label>
                             <input value="<%= product.departure %>" class="main-form-div1-input" type="text" id="departure" name="departure" placeholder="Origen">
                         </div>
                         <div class="main-form-div1-edit">
                             <label class="main-form-div1-label" for="reach"><i class="fa-solid fa-location-dot"></i></label>
                             <input value="<%= product.reach %>" class="main-form-div1-input" type="text" id="reach" name="reach" placeholder="Destino">
                         </div>
                     </div>
 
                     <div class="main-form-div1">
                         <div class="main-form-div1-origen">
                             <label class="main-form-div1-label" for="dateDeparture">Fecha ida</label>
                             <input value="<%= product.departureDate %> " class="main-form-div1-input" type="date" id="dateDeparture" name="dateDeparture" >
                         </div>
                         <div class="main-form-div1-edit">
                             <label class="main-form-div1-label" for="dateReach">Fecha vuelta</label>
                             <input value="<%= product.returnDate %> " class="main-form-div1-input" type="date" id="dateReach" name="dateReach">
                         </div>
                     </div>
 
                     <div class="main-form-div1">
                         <div class="main-form-div1-origen">
                             <label class="main-form-div1-label" for="hourDeparture">Hora ida</label>
                             <input value="<%= product.departureHour %> " class="main-form-div1-input" type="time" id="hourDeparture" name="hourDeparture" >
                         </div>
                         <div class="main-form-div1-edit">
                             <label class="main-form-div1-label" for="hourReach">Hora vuelta</label>
                             <input value="<%= product.returnHour %> " class="main-form-div1-input" type="time" id="hourReach" name="hourReach">
                         </div>
                     </div>
 
                     <div class="main-form-div1">
                         <div class="main-form-div1-origen">
                             <label class="main-form-div1-label" for="hotel">Hotel</label>
                             <input value="<%= product.hotel %> " class="main-form-div1-input" type="text" id="hotel" name="hotel" >
                         </div>
                         <div class="main-form-div1-edit">
                             <select class="select-passemgers" name="passengers" id="" required>
                                 <option value="none">Cantidad de pasajeros</option>
                                 <option value="1">1</option>
                                 <option value="2">2</option>
                                 <option value="3">3</option>
                                 <option value="4">4</option>
                                 <option value="5">5</option>
                             </select>
                         </div>
                     </div>
 
                     <div class="main-form-div1">
                         <div class="main-form-div1-origen">
                             <label class="main-form-div1-label" for="price">Precio por persona</label>
                             <input value="<%= product.price %> " class="main-form-div1-input" type="number" id="price" name="price" >
                         </div>
                         <div class="main-form-div1-edit">
                             <label>Oferta</label>
                             <div class="onsale-div">
                                 <div class="onsale-div-2">
                                     <label class="main-form-div1-label" for="">Si</label>
                                     <input type="checkbox" name="onSale" value="true" id="">
                                 </div>
                                 <div class="onsale-div-2">
                                     <label class="main-form-div1-label" for="">No</label>
                                     <input type="checkbox" name="onSale" value="false" id="">
                                 </div>
                             </div>
                             
                         </div>
                     </div>
 
                     <div class="bigest-vertion">
                         <div class="main-form-div2">
                         <label class="main-form-div2-label" for="description">Descripcion del producto</label>
                         <input value="<%= product.description %> " class="main-form-div2-input" type="text" id="description" name="description">
                         </div>
                         <div class="main-form-div3">
                         <div class="main-select-edit">
                             <select name="cabin" id="">
                                 <option value="none">Tipo de Cabina</option>
                                 <option value="economy">Economy</option>
                                 <option value="premium">Premium</option>
                                 <option value="premium-vip">Premium vip</option>
                             </select>
                     </div>
                         <div class="main-select-edit">
                             <select name="service" id="">
                                 <option value="none">Tipo de servicio</option>
                                 <option value="2">2 Estrellas</option>
                                 <option value="3">3 Estrellas</option>
                                 <option value="4">4 Estrellas</option>
                                 <option value="5">5 Estrellas</option>
                             </select>
                     </div>
                         </div>
                     </div>
                 </div>
             </div>
             <div class="main-form-bottom">
                 <button class="btn btn-primary" type="submit">Editar</button>
             </div>
 
        </form>
     </main>

    <%- include('../partials/footer') %> 

</body>
</html>